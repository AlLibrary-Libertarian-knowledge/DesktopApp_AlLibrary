{
  "name": "desktopapp-allibrary",
  "version": "0.1.0",
  "description": "AlLibrary - Decentralized Knowledge Sharing Platform",
  "type": "module",
  "author": "AlLibrary Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/allibrary.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:dev-clean": "yarn cache clean && yarn clean:win && yarn clean:appdata && cd src-tauri && cargo clean && cd .. && tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "npx eslint src --ext .js,.ts,.tsx",
    "lint:fix": "npx eslint --fix --ext .js,.ts,.tsx",
    "format": "npx prettier --write src/**/*.{ts,tsx,css}",
    "format:check": "npx prettier --check src/**/*.{ts,tsx,css}",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "audit:fix": "npm audit fix",
    "clean": "rm -rf dist build .vite node_modules/.cache",
    "clean:win": "if exist dist rmdir /s /q dist && if exist build rmdir /s /q build && if exist .vite rmdir /s /q .vite && if exist node_modules\\.cache rmdir /s /q node_modules\\.cache",
    "clean:appdata": "if exist \"%APPDATA%\\desktopapp-allibrary\" rmdir /s /q \"%APPDATA%\\desktopapp-allibrary\" && if exist \"%APPDATA%\\com.desktopapp-allibrary.dev\" rmdir /s /q \"%APPDATA%\\com.desktopapp-allibrary.dev\"",
    "prepare": "husky",
    "validate": "npm run typecheck && npm run lint && npm run test -- --run && npm run build",
    "husky:check": "sh .husky/health-check.sh"
  },
  "dependencies": {
    "@solidjs/router": "^0.14.1",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "cargo": "^0.8.0",
    "lucide-solid": "^0.513.0",
    "solid-js": "^1.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@solidjs/testing-library": "^0.8.10",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "eslint": "^9.0.0",
    "eslint-plugin-solid": "^0.14.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "postcss": "^8.5.4",
    "prettier": "^3.0.0",
    "terser": "^5.42.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^3.2.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write",
      "npm audit --audit-level=moderate"
    ]
  }
}
