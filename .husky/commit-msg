echo "üîç Validating commit message..."

# Read the commit message
commit_msg=$(cat "$1")

# Define the conventional commit pattern
pattern="^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,50}"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Please use conventional commits format:"
    echo "  feat(scope): add new feature"
    echo "  fix(scope): fix bug"
    echo "  docs: update documentation"
    echo "  style: formatting changes"
    echo "  refactor: code refactoring"
    echo "  test: add or update tests"
    echo "  chore: maintenance tasks"
    echo "  perf: performance improvements"
    echo "  ci: CI/CD changes"
    echo "  build: build system changes"
    echo "  revert: revert previous commit"
    echo ""
    echo "Examples:"
    echo "  feat(auth): add user authentication"
    echo "  fix(ui): resolve button alignment issue"
    echo "  docs: update installation instructions"
    echo ""
    exit 1
fi

echo "‚úÖ Commit message format is valid!" 