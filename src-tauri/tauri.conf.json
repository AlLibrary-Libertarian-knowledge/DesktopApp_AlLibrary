{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AlLibrary",
  "version": "0.1.0",
  "identifier": "com.allibrary.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AlLibrary - Decentralized Cultural Heritage Network",
        "width": 1920,
        "height": 1080,
        "minWidth": 1200,
        "minHeight": 800,
        "fullscreen": false,
        "maximized": true,
        "resizable": true,
        "decorations": true,
        "center": true,
        "focus": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
